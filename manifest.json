{
	"manifest_version": 3,
	"name": "Reload on Focus",
	"version": "1.0",

	"description": "Reload tabs with matching URLs when they receive focus",
	"icons": {
		"16": "images/icons/main/16.png",
		"32": "images/icons/main/24.png",
		"32": "images/icons/main/32.png",
		"64": "images/icons/main/64.png",
		"128": "images/icons/main/128.png",
		"256": "images/icons/main/256.png",
		"512": "images/icons/main/512.png"
	},

	"homepage_url": "https://github.com/AlexWayfer/reload-on-focus",
	"author": "alex.wayfer@gmail.com",
	"permissions": [
		"tabs",
		"storage"
	],
	"options_page": "pages/options.html"
}
